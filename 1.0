#include <iostream>
using namespace std;

int main(int argc, char** argv) {
	int n = 0;
	if (argc > 1) {
		n = argv[1];
	}
	LucasPrint(0, 2);
	LucasPrint(1, 1);
	LucasNumbers(n, 2, 2, 1);
	return 0;
}

void LucasNumbers(int targetN, int currentN, int prev1, int prev2) {
	int thisNum = prev1 + prev2;
	LucasPrint(currentN, thisNum);
	if (targetN >= currentN) {
		LucasNumbers(targetN, currentN+1, thisNum, prev1);
	}
}

void LucasPrint (int n, int val) {
	cout << "L(" << n << ") = " << val << endl;

}
